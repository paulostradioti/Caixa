@using Caixa.Web.Data
@model Turma

@{
    ViewData["Title"] = "Create Turma";
}

<h2 class="mb-4">Create Turma</h2>

<div asp-validation-summary="ModelOnly"></div>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Professor" class="form-label"></label>
        <input asp-for="Professor" class="form-control" />
        <span asp-validation-for="Professor" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }